[DEFAULT]
bind_ip = 0.0.0.0
bind_port = 6001
mount_check = false
user = swift
devices = <%= storage_base_dir %>
workers = <%= storage_workers %>
swift_dir = /etc/swift
log_facility = LOG_LOCAL2
log_level = DEBUG

[pipeline:main]
pipeline = container-server

[app:container-server]
use = egg:swift#container

[container-replicator]

[container-updater]

[container-auditor]

[container-sync]
