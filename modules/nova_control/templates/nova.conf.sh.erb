MY_IP=`ifconfig <%= external_network_interfaces %> | awk '/inet addr/ {print $2}' | awk -F: '{print $2}'`
cat > /etc/nova/nova.conf << _GEEK_
[DEFAULT]
# LOGS/STATE
debug = <%= debug_log %>
verbose = <%= verbose %>
logdir = /var/log/nova
state_path = /var/lib/nova
lock_path = /var/lock/nova
rootwrap_config = /etc/nova/rootwrap.conf
dhcpbridge = /usr/bin/nova-dhcpbridge
# SCHEDULER
compute_scheduler_driver = nova.scheduler.filter_scheduler.FilterScheduler
## VOLUMES
volume_api_class = nova.volume.cinder.API
osapi_volume_listen_port = 5900
iscsi_helper = ietadm
iscsi_ip_address = <%= nova_api %>
# DATABASE
sql_connection = mysql://nova:<%= nova_db_password %>@<%= mysql_host %>/nova
# COMPUTE
libvirt_type = <%= libvirt_type %>
compute_driver = libvirt.LibvirtDriver
instance_name_template = instance-%08x
api_paste_config = /etc/nova/api-paste.ini
# COMPUTE/APIS: if you have separate configs for separate services
# this flag is required for both nova-api and nova-compute
allow_resize_to_same_host = True
# APIS
osapi_compute_extension = nova.api.openstack.compute.contrib.standard_extensions
ec2_dmz_host = <%= nova_api %>
s3_host = <%= nova_api %>
metadata_host = <%= nova_api %>
metadata_listen = 0.0.0.0
# RABBITMQ
rabbit_host = <%= rabbit_host %>
rabbit_password = guest
# GLANCE
image_service = nova.image.glance.GlanceImageService
glance_api_servers = <%= glance_host %>:9292
# NETWORK
network_api_class = nova.network.quantumv2.api.API
quantum_url = http://<%= quantum_service_host %>:9696
quantum_auth_strategy = keystone
quantum_admin_tenant_name = <%= service_tenant_name %>
quantum_admin_username = quantum
quantum_admin_password = <%= service_password %>
quantum_admin_auth_url = <%= service_endpoint %>
service_quantum_metadata_proxy = <%= service_quantum_metadata_proxy %>
libvirt_vif_driver = nova.virt.libvirt.vif.LibvirtHybridOVSBridgeDriver
linuxnet_interface_driver = nova.network.linux_net.LinuxOVSInterfaceDriver
firewall_driver = nova.virt.libvirt.firewall.IptablesFirewallDriver
# NOVNC CONSOLE
novncproxy_base_url = http://<%= novncproxy_base_url %>:6080/vnc_auto.html
# Change vncserver_proxyclient_address and vncserver_listen to match each compute host
vncserver_proxyclient_address = $MY_IP
vncserver_listen = 0.0.0.0
# AUTHENTICATION
auth_strategy = keystone
[keystone_authtoken]
auth_host = <%= keystone_host %>
auth_port = 35357
auth_protocol = http
admin_tenant_name = <%= service_tenant_name %>
admin_user = nova
admin_password = <%= service_password %>
signing_dir = /tmp/keystone-signing-nova
_GEEK_
chown nova:nova /etc/nova/nova.conf
